@using UniStore.Models
@model UniStore.Models.ViewModels.Category.RenameCategoryVM

@using (Ajax.BeginForm("Rename", new AjaxOptions()
{
    UpdateTargetId = Constants.ContainerBodyId,
    HttpMethod = "POST"
}))
{
    @Html.AntiForgeryToken()

    <div class="width-custom">
        <h4>Rename category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.Name, new { @class = "form-control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="offset-2 col-md-10">
                <input type="submit" value="Rename" class="btn btn-primary" />
                @Html.Partial("Partials/AjaxActionLinks/BackToCategoriesList", Model.DepartmentId)
            </div>
        </div>
    </div>
}
