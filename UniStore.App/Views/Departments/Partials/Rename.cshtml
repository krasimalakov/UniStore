@using UniStore.Models
@model UniStore.Models.ViewModels.Department.DepartmentVM

@{
    ViewBag.Title = "Departments";
}

@using (Ajax.BeginForm("Rename", new AjaxOptions()
{
    UpdateTargetId = Constants.ContainerBodyId,
    HttpMethod = "POST"
}))
{
    @Html.AntiForgeryToken()
    
    <div class="width-custom">
        <h4>Rename department</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.Partial("Partials/AjaxActionLinks/BackToDepartmentsList")
            </div>
        </div>
    </div>
}
