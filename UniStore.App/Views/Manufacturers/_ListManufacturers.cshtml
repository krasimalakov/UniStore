@model UniStore.Models.ViewModels.Manufacturer.ManufacturersListVM

@if (Model.Manufacturers.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturers[0].ContactInformation)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Manufacturers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactInformation)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }

    </table>
}

@Html.Partial("Partials/PaginationAjax", Model.Pagination,
    new ViewDataDictionary
    {
        { "ActionName", "ManufacturersList" },
        { "TargetId", "manufacturersList" }
    })