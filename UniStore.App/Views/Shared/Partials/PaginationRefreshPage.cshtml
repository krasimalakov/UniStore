@model UniStore.Models.Pagination
@if (Model.PageCount > 1)
{
    var searchQuery = Model.Search == null ? "" : $"&search={Model.Search}";

    <div class="text-center">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm">
                @if (Model.Page <= 1)
                {
                    <li class="disabled">
                        <a aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="?page=@(Model.Page - 1)@searchQuery" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (var i = 1; i <= Model.PageCount; i++)
                {
                    <li class="@(i == Model.Page ? "active" : "")">
                        <a href="?page=@i@searchQuery">@i</a>
                    </li>
                }

                @if (Model.Page >= Model.PageCount)
                {
                    <li class="disabled">
                        <a aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="?page=@(Model.Page + 1)@searchQuery" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }

            </ul>
        </nav>
    </div>

}