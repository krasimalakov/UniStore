@using UniStore.Models
@model UniStore.Models.BindingModels.Product.SearchProductsBM

@using (Ajax.BeginForm("ProductsList", "Store", null,
    new AjaxOptions
    {
        HttpMethod = "GET",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = Constants.ContainerStoreProductsId,
        LoadingElementId = Constants.AjaxLoadingId,
        LoadingElementDuration = 400
    },
    new { @class = "float-left form-inline", id = "products-search-form" }))
{
    @Html.HiddenFor(model => model.DepartmentId)
    @Html.HiddenFor(model => model.CategoryId)
    @Html.HiddenFor(model => model.SubCategoryId)
    <div class="input-group"  id="search-products-group">
        @Html.EditorFor(model => model.Search,
            new { htmlAttributes = new { @class = "form-control", id = "search-products" } })
        <span class="input-group-btn">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <span>
                Order by
            </span>
            <span></span>
        </span>
        @Html.DropDownListFor(model => model.OrderBy,
            Model.OrderByList, new
            {
                @class = "form-control",
                onchange = "$('#products-search-form').trigger('submit');"
            })
        @Html.DropDownListFor(model => model.Order,
            Model.OrderList, new
            {
                @class = "form-control",
                onchange = "$('#products-search-form').trigger('submit');"
            })

    </div>
}

